<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_group_goods_collage_img"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/item_group_goods_collage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="用户人员1"
            android:textColor="@color/color444"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还差"
                    android:textColor="@color/color444"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_group_goods_collage_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorff5"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人拼成"
                    android:textColor="@color/color444"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_group_goods_collage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="剩余23:10:20:30"
                android:textColor="@color/color999"
                android:textSize="9sp" />

        </LinearLayout>

        <!--去拼单-->
        <LinearLayout
            android:id="@+id/item_group_goods_collage_go"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_rush_buy"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:layout_width="45dp"
                android:layout_height="21dp"
                android:text="去拼单"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_next_collage" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>