<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#249EF5"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/back_white"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <RelativeLayout
            android:background="@drawable/bg_search_shape"
            android:layout_marginLeft="18.5dp"
            android:layout_toRightOf="@id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="286.5dp"
            android:layout_height="32dp">

            <TextView
                android:layout_marginLeft="15dp"
                android:text="搜索订单、买家昵称"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:background="#ffffff"
        app:tl_textUnselectColor="@android:color/darker_gray"
        app:tl_textSelectColor="@android:color/black"
        app:tl_indicator_color="#e6ffea00"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width="15dp"
        app:tl_indicator_margin_top="0dp"
        app:tl_textsize="14sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="6dp"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>