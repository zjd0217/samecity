<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorf7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/mTvChooseCity"
                    android:layout_width="wrap_content"
                    android:text="您当前访问：苍南"
                    android:textColor="@color/colorff5"
                    android:textSize="15sp"
                    android:paddingStart="14dp"
                    android:paddingLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/mTvChange"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:text="切换县区"
                    android:textColor="@color/color999"
                    android:paddingRight="14dp"
                    android:drawableRight="@drawable/list_icon_open"
                    android:drawableEnd="@drawable/list_icon_open"
                    android:gravity="center_vertical"
                    android:paddingEnd="14dp"
                    android:layout_gravity="center_vertical|right|end"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <com.wxkj.tongcheng.view.flowlayout.TagFlowLayout
                android:id="@+id/mFlChooseCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:max_select="-1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorf7"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:textColor="@color/color999"
                    android:textSize="15sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:text="当前定位"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mTvCurrentCity"
                    android:layout_width="100dp"
                    android:background="@color/white"
                    android:text="苍南"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:gravity="center"
                    android:textColor="@color/color333"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color999"
                    android:textSize="15sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:text="热门城市"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>