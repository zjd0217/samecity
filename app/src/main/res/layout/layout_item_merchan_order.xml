<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#fafafa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <ImageView
            android:background="#550000"
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:layout_height="95dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="12sp"
                android:textColor="#333333"
                android:text="COLOPLAST马克笔大礼包 单头马克笔马克笔第一代——设计界的翘楚"
                android:layout_marginTop="20dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="#99999999"
                android:text="属性2属性3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="¥ 19.9"
                    android:textSize="12sp"
                    android:textColor="#ff5000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付:"
                android:textColor="#FF333333"
                android:textSize="10sp"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_price"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥87"
                android:textColor="#FF333333"
                android:textSize="12sp"
                />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFDDDDDD"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:text="收货信息：待支付订单"
            android:textSize="13sp"
            android:textColor="#FF5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="猪猪侠:18888888888"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search_shape_contact_buyer"
                android:gravity="center"
                android:textColor="#FF5000"
                android:text="拨打"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="收货地址：杭州市 余杭区  水城北路123号"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/navigation"
                android:layout_width="15dp"
                android:layout_height="15dp" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFDDDDDD"
        />
    <RelativeLayout
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:background="@drawable/bg_search_shape_contact_buyer"
            android:gravity="center"
            android:textColor="#FF5000"
            android:text="联系买家"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="86dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFDDDDDD"
        />
</LinearLayout>