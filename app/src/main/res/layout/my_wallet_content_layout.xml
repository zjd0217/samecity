<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="@drawable/my_wallet_bg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额（元）"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/user_capital_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/lock_capital_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冻结金额 0.00元"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/put_forward_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="提现"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorff5"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_circle_bg_50dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorf7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:text="提现将于次月10日钱转入您的银行卡"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="提现中的金额"
                android:textColor="@color/color444"/>
            <TextView
                android:id="@+id/get_capital_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textSize="18sp"
                android:textColor="@color/colorff5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_icon_next"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/set_forward_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="设置提现密码"
                android:textColor="@color/color444"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_icon_next"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bank_card_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="我的银行卡"
                android:textColor="@color/color444"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_icon_next"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
