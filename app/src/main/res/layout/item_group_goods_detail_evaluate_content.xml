<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="136.5dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_evaluate_content_img"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/item_evaluate_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="水果姐"
                android:textColor="@color/color444"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_evaluate_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018.02.21"
            android:textColor="@color/color999"
            android:textSize="12sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/item_evaluate_content_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:minHeight="40dp"
        android:text="挺好用，没有色差，态度极好"
        android:textColor="@color/color666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_evaluate_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="商品：设计第三代"
        android:textColor="@color/color999"
        android:textSize="12sp" />

</LinearLayout>