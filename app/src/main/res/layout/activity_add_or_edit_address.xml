<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.mine.user.setting.address.addoredit.AddOrEditAddressActivity">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/add_or_edit_title_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/add_or_edit_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:singleLine="true"
            android:text="新增收货地址"
            android:textColor="@color/color444"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/add_or_edit_title_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorff5"
            android:textSize="14sp" />
    </RelativeLayout>


    <!--收货人姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人姓名"
            android:textColor="@color/color555"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_or_edit_name"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入收货人姓名"

            android:textColor="@color/color333"
            android:textSize="15sp" />

    </LinearLayout>

    <!--收货人电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12.5dp"
        android:paddingRight="12.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人电话"
            android:textColor="@color/color555"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_or_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:hint="请输入收货人电话"
            android:inputType="phone"
            android:textColor="@color/color333"
            android:textSize="15sp" />

    </LinearLayout>

    <!--收货地址-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/add_or_edit_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="收货地址"
            android:textColor="@color/color555"
            android:textSize="15sp" />

        <!--省区和具体地址-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/add_or_edit_address_icon"
            android:layout_toRightOf="@+id/add_or_edit_address_text"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_or_edit_address_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/color999"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/add_or_edit_address_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5.5dp"
                android:background="@null"
                android:hint="请输入详细地址"
                android:textColor="@color/coloraaa"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/add_or_edit_address_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_next" />


    </RelativeLayout>

    <!--地址备注-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="地址备注："
            android:textColor="@color/color555"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_or_edit_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:hint="请填写地址备注"
            android:textSize="14sp" />

    </LinearLayout>

    <!--是否默认地址-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置为默认地址"
            android:textColor="@color/color555"
            android:textSize="15sp" />


        <CheckBox
            android:id="@+id/add_or_edit_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorffa" />

    <Button
        android:id="@+id/add_or_edit_save"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0"
        android:background="@color/colorff5"
        android:text="保存并使用"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>