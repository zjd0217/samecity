<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvPic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_food" />


    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:text="iphoneX全网4g 前后3000万像素，萌萌齐刘海手机，5.8英寸IPHONE X"
        android:textColor="@color/color333"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/mTvRushBuy"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/wechat_login_bg"
            android:drawableEnd="@drawable/icon_next_collage"
            android:drawableRight="@drawable/icon_next_collage"
            android:gravity="center_vertical"
            android:paddingEnd="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingStart="14dp"
            android:text="立即抢购"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/mTvPresentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="¥6500"
            android:textColor="@color/colorff5"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mTvCollagePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/mTvPresentPrice"
            android:layout_toRightOf="@+id/mTvPresentPrice"
            android:text="单买价8000   已拼300"
            android:textColor="@color/color999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/mTvLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/mTvCollagePrice"
            android:layout_toRightOf="@+id/mTvCollagePrice"
            android:drawableLeft="@drawable/img_location_list"
            android:drawableStart="@drawable/img_location_list"
            android:text="距您500m"
            android:textColor="@color/color999"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorf7" />
</LinearLayout>